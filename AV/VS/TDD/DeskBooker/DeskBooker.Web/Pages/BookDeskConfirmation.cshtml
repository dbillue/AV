@page
@model BookDeskConfirmationModel
@{
  ViewData["Title"] = "Book Desk Confirmation";
}

<h1 class="display-4 text-light">Your desk is booked</h1>
<p class="lead text-light">
  at our coffee shop in Zurich
</p>
<p class="text-light">
  Hi @Model.FirstName,
  </p>
<p class="text-light">
  A desk was booked for you
  on <strong>@Model.Date.ToShortDateString()</strong>.<br />
  Your booking number is <strong>@Model.DeskBookingId</strong>.<br />
  We're looking forward to seeing you!
</p>
<p class="text-light">
  Your Wired Brain Coffee team
</p>

<div>
  <a class="btn-primary btn" style="margin-top: 25px" asp-area="" asp-page="/BookDesk">Book another desk</a>
</div>
