@page
@model DeskBookingsModel
@{
  ViewData["Title"] = "Desk Bookings";
}

<h1 class="display-4 text-light">Desk Bookings</h1>

<p class="lead text-light">Here you see a table with all desk bookings ordered by date.</p>

<hr />

<table class="table table-striped table-bordered dt-responsive nowrap">
  <thead class="thead-light">
    <tr>
      <th>Date</th>
      <th>Desk Id</th>
      <th>Email</th>
      <th>FirstName</th>
      <th>LastName</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var deskBooking in Model.DeskBookings)
    {
      <tr>
        <td><span class="text-light">@deskBooking.Date.ToShortDateString()</span></td>
        <td><span class="text-light">@deskBooking.DeskId</span></td>
        <td><span class="text-light">@deskBooking.Email</span></td>
        <td><span class="text-light">@deskBooking.FirstName</span></td>
        <td><span class="text-light">@deskBooking.LastName</span></td>
      </tr>
    }
  </tbody>
</table>

