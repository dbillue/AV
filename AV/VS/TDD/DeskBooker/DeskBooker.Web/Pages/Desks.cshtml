@page
@model DesksModel
@{
  ViewData["Title"] = "Desks";
}

<h1 class="display-4 text-light">Desks</h1>

<p class="lead text-light">Here you see a table with all desks available at WiredBrainCoffee Zurich.</p>

<hr />

<table class="table table-striped table-bordered dt-responsive nowrap">
  <thead class="thead-light">
    <tr>
      <th>Desk Id</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var desk in Model.Desks)
    {
      <tr>
        <td><span class="text-light">@desk.Id</span></td>
        <td><span class="text-light">@desk.Description</span></td>
      </tr>
    }
  </tbody>
</table>


